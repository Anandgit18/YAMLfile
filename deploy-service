apiVersion: v1
kind: Service
metadata:
  name: busapp-service
spec:
  ports:
    - port: 30002
      targetPort: 3000
      nodePort: 30002
      protocol: TCP
  type: NodePort
  selector:
    app: frontend
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: busapp-deploy
spec:
  replicas: 1
  selector:
    matchLabels:
      app: frontend
  template:
    metadata:
      labels:
        app: frontend
    spec:
      containers:
        - name: busapp-container
          image: ananddocker18/mybus:latest
          ports:
            - containerPort: 3000
