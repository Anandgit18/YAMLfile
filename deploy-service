apiVersion: v1
kind: Service
metadata:
  name: busapp-service
spec:
  selector:
    app: frontend
  type: LoadBalancer
  ports:
    - protocol: TCP
      port: 80
      targetPort: 3000
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: busapp-deploy
spec:
  replicas: 1
  selector:
    matchLabels:
      app: frontend
  template:
    metadata:
      labels:
        app: frontend
    spec:
      containers:
        - name: busapp-container
          image: ananddocker18/mybus:latest
          ports:
            - containerPort: 3000
              protocol: TCP
